<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="theme_switch" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#181818</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ButtonNext" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="InputTextWhite">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/inputwhite</item>
        <item name="android:textColorHint">@color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/margin_start_end</item>
        <item name="android:paddingTop">@dimen/margin_top</item>
        <item name="android:paddingStart">@dimen/margin_start_end</item>
        <item name="android:paddingEnd">@dimen/margin_start_end</item>
    </style>
</resources>