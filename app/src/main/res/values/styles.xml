<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="theme_switch" parent="Theme.AppCompat.Light">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#181818</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="ButtonNext" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="ImageCard" >
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>
</resources>